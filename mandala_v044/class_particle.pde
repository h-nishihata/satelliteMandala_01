//  OBJECTS
class Spot {
          float x, y;
          color c;
          float r;
  
//------------------------------------------------------------------------------------------------------------------  
Spot() {
          colorMode(HSB,100);
          x = width/2;
          y = 0;
          c = somecolor(); 
          r = random(1,5);
}

//------------------------------------------------------------------------------------------------------------------
void move() {
          if(y <= height/2){  
                x += random(-6,6); 
                y += random(0,5);
          }else{
                x += random(-10,10);
                y += random(0,5);
          }
}
  
//------------------------------------------------------------------------------------------------------------------  
void draw(){
          noStroke();
          fill(hue(c),saturation(c+2),brightness(c),20);
          ellipse(x,y,r,r);
  }
}

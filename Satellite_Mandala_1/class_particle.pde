//  OBJECTS
class Spot1 {
          float x, y;
          color c;
          float r;
  
//------------------------------------------------------------------------------------------------------------------  
Spot1() {
          colorMode(HSB,100);
          x = width*1/3;
          y = 0;
          c = somecolor(); 
          r = random(1,5);
}

//------------------------------------------------------------------------------------------------------------------
void move() {
          if(y <= height/2){  
                x += random(-6,10); 
                y += random(0,8);
          }else{
                x += random(-6,15);
                y += random(0,10);
          }
}
  
//------------------------------------------------------------------------------------------------------------------  
void draw(){
          noStroke();
          fill(hue(c),saturation(c+2),brightness(c),20);
          ellipse(x,y,r,r);
  }
}

